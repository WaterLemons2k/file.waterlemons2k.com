<!doctype html>
<html>
    <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=5" />
    <title>计数器+秒表</title>
    </head>
    <body>
    <HTA:APPLICATION ID="stopwatch"
    APPLICATIONNAME="counter"
    SCROLL="no" 
   >
    <script>
    window.resizeTo(260,110);
    function add() {
    var number = document.getElementById("number").innerText =parseInt(document.getElementById("number").innerText)+1
    }
    function reduce() {
    var number = document.getElementById("number").innerText =parseInt(document.getElementById("number").innerText)-1
    }
            var minute,second;//分 秒
        minute=second=0;//初始化
        var int;
        function timer()//计时
        {
                second=second+1;
            if(second>=60)
            {
                second=0;
                minute=minute+1;
            }
            document.getElementById('text').innerText = minute+":"+second;
 
        }
        function start()//继续
        {
            int=setInterval(timer,1000);
            document.getElementById("stop").innerText ="暂停";
            document.getElementById("stop").onclick = stop;
        }
         function stop()//暂停
        {
            window.clearInterval(int);
            document.getElementById("stop").innerText ="继续";
            document.getElementById("stop").onclick = start;
        }
        function Reset()//重置
        {
            window.clearInterval(int);
            minute=second=0;
            document.getElementById('text').innerText = minute+":"+second;
            start()
        }
        function starttimer()//开始计时
        {
            int=setInterval(timer,1000);
        }
        starttimer()
    </script>
    <input type="button" value="-" onclick="reduce()">
    <span contenteditable="true" id="number">0</span> 
    <input type="button" value="+" onclick="add()">
        <span id="text">0:0</span>
    <button type="button" id="stop" onclick="stop()">暂停</button> <button type="button" onclick="Reset()">重置</button>
    </body>
    </html>
